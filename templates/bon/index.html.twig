{% extends 'base.html.twig' %}

{% block title %}Bonnen{% endblock %}

{% block body %}

<div class="rand">
    <h1>Bon index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Producten</th>
                <th>Rekening</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bon in bons %}
            <tr>
                <td>{{ bon.id }}</td>
                <td>{{ bon.product|join(', ')}}</td>
                <td>{{ bon.rekening }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('bon_edit', {'id': bon.id}) }}">Open rekening</a>
                    <a class="btn btn-sm btn-success" href="{{ path('bon_show', {'id': bon.id}) }}">Bekijken en printen</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-sm btn-success" href="{{ path('bon_new') }}">Nieuwe bon</a>
</div>
{% endblock %}
